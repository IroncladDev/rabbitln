{
  "name": "fedimodboilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun i && next dev --turbo",
    "build": "bun db:push && next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "drizzle-kit push:pg",
    "db:generate": "drizzle-kit generate:pg",
    "db:sync": "bun db:push && bun db:generate",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{js,ts,tsx}\" --plugin=prettier-plugin-organize-imports"
  },
  "dependencies": {
    "@fedibtc/tailwind-theme": "1.0.3",
    "@fedibtc/ui": "1.1.6",
    "@paralleldrive/cuid2": "^2.2.2",
    "@vercel/analytics": "^1.1.3",
    "bolt11": "^1.4.1",
    "drizzle-orm": "^0.30.10",
    "next": "^14.1.0",
    "nostr-tools": "^2.5.1",
    "pg": "^8.11.5",
    "react": "^18",
    "react-dom": "^18",
    "react-tailwind-variants": "^1.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fedibtc/api": "^0.0.1",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.11.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "autoprefixer": "^10",
    "drizzle-kit": "^0.20.17",
    "eslint": "^8",
    "eslint-config-next": "13.5.5",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tailwindcss": "^3",
    "typescript": "^5.2.2"
  }
}
